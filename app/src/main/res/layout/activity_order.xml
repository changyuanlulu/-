<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cube_ptr="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/white">

        <ImageView
            android:id="@+id/back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:src="@mipmap/aat" />
       <LinearLayout
           android:layout_width="120dp"
           android:layout_height="50dp"
           android:layout_centerHorizontal="true"
         >
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
              android:layout_margin="10dp">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="20dp"
                   android:textColor="#FF0D0D0D"
                   android:text="我的订单"/>
                  />
           </LinearLayout>

       </LinearLayout>

        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/search_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:src="@mipmap/aaj" />

        <ImageView
            android:id="@+id/notice_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/axw"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/search_img"
            android:layout_toStartOf="@+id/search_img" />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="#dddddd"/>
   <include layout="@layout/buclick"></include>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="#dddddd"/>
    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
</LinearLayout>