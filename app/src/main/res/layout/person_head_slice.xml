<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/head"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7371a"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header_relayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="5dip"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/head_mimgv"
            android:layout_width="900dip"
            android:layout_height="80dip"
            android:orientation="horizontal"
            android:layout_marginTop="26dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:onClick="recommend"
                android:id="@+id/person_head_person"
                android:layout_width="70dip"
                android:layout_height="70dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dip"
                android:adjustViewBounds="true"
                android:src="@drawable/person_default_head" />
            <LinearLayout
                android:onClick="recommend"
                android:id="@+id/person_head_name"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:text="用户名"/>
                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:onClick="recommend"
                        android:id="@+id/person_head_member"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="注册会员"/>
                    <TextView
                        android:onClick="recommend"
                        android:id="@+id/person_head_credit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="小白信用"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>



        <RelativeLayout
            android:onClick="recommend"
            android:id="@+id/account_rlayout"
            android:layout_width="150dip"
            android:layout_height="30dip"
            android:layout_alignBottom="@id/head_mimgv"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/arrow_imgv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/personal_icon_account_manager_arrow" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dip"
                android:layout_toLeftOf="@id/arrow_imgv"
                android:gravity="right|center_vertical"
                android:text="账户管理"
                android:textColor="@android:color/white" />
        </RelativeLayout>



    </RelativeLayout>

</LinearLayout>
