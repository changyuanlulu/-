<?xml version="1.0" encoding="utf-8"?>
<com.sxjs.common.widget.aspect_ratio_layout.AspectRatioLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:cube_ptr="http://schemas.android.com/tools"
    android:id="@+id/carrecycle_item_null"
    android:orientation="vertical">
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/car_null_pull_refresh_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        cube_ptr:ptr_duration_to_close="200"
        cube_ptr:ptr_duration_to_close_header="300"
        cube_ptr:ptr_keep_header_when_refresh="true"
        cube_ptr:ptr_pull_to_fresh="false"
        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.0"
        cube_ptr:ptr_resistance="2.0">
    <com.sxjs.common.widget.percentlayout.PercentRelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">

        <com.sxjs.common.widget.percentlayout.PercentLinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/car_null" />
            <com.sxjs.common.widget.percentlayout.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                android:id="@+id/gwck"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_height="20dp"
                android:text="购物车是空的"
                />
            </com.sxjs.common.widget.percentlayout.PercentRelativeLayout>
        </com.sxjs.common.widget.percentlayout.PercentLinearLayout>

    <com.sxjs.common.widget.percentlayout.PercentLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="116dp">
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@color/lineColor"
            android:text="逛逛秒杀" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="         "/>
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"

            android:background="@color/color_orange_red"
            android:text="看看关注"
             />
    </com.sxjs.common.widget.percentlayout.PercentLinearLayout>

    </com.sxjs.common.widget.percentlayout.PercentRelativeLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</com.sxjs.common.widget.aspect_ratio_layout.AspectRatioLinearLayout>