<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dip"
    android:gravity="center_vertical"
    android:background="#ffffffff">
    <LinearLayout
        android:onClick="recommend"
        android:id="@+id/commodity_concerns"
        android:layout_weight="1.0"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f6f6f6"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_horizontal|center_vertical">

        <TextView
            android:textColor="#fa151313"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:text="10"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:text="商品关注"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <LinearLayout
        android:onClick="recommend"
        android:id="@+id/shop_attention"
        android:layout_weight="1.0"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f6f6f6"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_horizontal|center_vertical">

        <TextView
            android:textColor="#fa151313"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:text="10"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:text="店铺关注"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <LinearLayout
        android:onClick="recommend"
        android:id="@+id/browse_log"
        android:layout_weight="1.0"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f6f6f6"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_horizontal|center_vertical">

        <TextView
            android:textColor="#fa151313"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:text="10"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:text="浏览记录"
            android:textColor="@android:color/black"/>
    </LinearLayout>
    <LinearLayout
        android:onClick="recommend"
        android:id="@+id/customer_service"
        android:layout_weight="1.0"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f6f6f6"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_horizontal|center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:src="@drawable/icon_pay_success"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:text="客户服务"
            android:textColor="@android:color/black"/>
    </LinearLayout>
</LinearLayout>









