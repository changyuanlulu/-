<?xml version="1.0" encoding="utf-8"?>
<com.sxjs.common.widget.aspect_ratio_layout.AspectRatioRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="400dp"
    android:layout_height="200dp"
    app:Layout_viewAspectRatio="3.53"
    android:id="@+id/tishilan"
    android:background="@color/white"
    android:orientation="vertical">

            <TextView
                android:id="@+id/gwck"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"

                android:layout_centerVertical="true"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:text="请选择要进行的操作"
                />
    <View
        android:id="@+id/type1111_item_one_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/gz"
        android:background="@color/lineColor" />

    <com.sxjs.common.widget.percentlayout.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/gz"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/mv"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="移入关注" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/del"
            android:text="删除"
            android:background="@color/color_orange_red"
             />
    </com.sxjs.common.widget.percentlayout.PercentLinearLayout>


</com.sxjs.common.widget.aspect_ratio_layout.AspectRatioRelativeLayout>