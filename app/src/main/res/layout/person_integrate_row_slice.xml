<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dip"
    android:gravity="center_vertical"
    android:background="#ffffffff">
    <LinearLayout
        android:id="@+id/personal_money_bean"
        android:layout_weight="1.0"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f6f6f6"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_horizontal|center_vertical">

        <TextView
            android:textColor="#fa151313"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:text="10"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:text="京豆"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/personal_money_coupon"
        android:layout_weight="1.0"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f6f6f6"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_horizontal|center_vertical">

        <TextView
            android:textColor="#fa151313"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:text="10"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:text="优惠券"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/personal_money_lous"
        android:layout_weight="1.0"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f6f6f6"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_horizontal|center_vertical">

        <TextView
            android:textColor="#fa151313"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:text="10"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:text="白条"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/personal_money_valut"
        android:layout_weight="1.0"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f6f6f6"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_horizontal|center_vertical">

        <TextView
            android:textColor="#fa151313"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:text="10"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:text="京东小金库"
            android:textColor="@android:color/black"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/personal_monety"
        android:layout_weight="1.0"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f6f6f6"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_horizontal|center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:src="@drawable/icon_pay_success"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:text="我的钱包"
            android:textColor="@android:color/black"/>
    </LinearLayout>
</LinearLayout>









