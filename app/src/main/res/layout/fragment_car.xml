<?xml version="1.0" encoding="utf-8"?>
<com.sxjs.common.widget.aspect_ratio_layout.AspectRatioLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:cube_ptr="http://schemas.android.com/tools"
    android:background="@drawable/home_jd_bulletin_corner_bg"
    android:orientation="vertical"
    android:layout_height="wrap_content">
<com.sxjs.common.widget.percentlayout.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:id="@+id/carrecycle_item"
    android:layout_height="match_parent"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_height="20dp"
                android:text="购物车"
                />
            <ImageView
                android:layout_alignParentRight="true"
                android:id="@+id/advisory_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="15dp"
                android:src="@drawable/advisory_common" />

            <TextView
                android:id="@+id/tv_bianji"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/advisory_img"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="编辑"
                />
            <TextView
                android:id="@+id/tv_finish"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/advisory_img"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="完成"
                />

        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_10dp"
        android:background="@color/lineColor"></View>
    <RelativeLayout
        android:id="@+id/rl_shopcart_have"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <android.support.v4.widget.SwipeRefreshLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/car_item_pull_refresh_header">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/car_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:overScrollMode="never"
                    android:scrollbars="none" />

            </android.support.v4.widget.SwipeRefreshLayout>
                <ProgressBar
                    android:id="@+id/pb_fc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    />
            </FrameLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="50dp">
            </View>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">
                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:id="@+id/rlBottomBar"
                        android:layout_height="wrap_content">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_alignParentTop="true"
                            android:background="#ccc"/>
                        <RelativeLayout
                            android:id="@+id/qx"
                            android:layout_width="80dp"
                            android:layout_height="50dp">
                            <TextView
                                android:id="@+id/ivSelectAll"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/margin_10dp"
                                android:drawableLeft="@drawable/shopcart_selected"
                                android:drawablePadding="@dimen/padding_5dp"></TextView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignRight="@+id/ivSelectAll"
                                android:text="全选"></TextView>
                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@+id/qx"
                            android:orientation="horizontal">
                            <RelativeLayout
                                android:id="@+id/rl_edit"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/tv_share"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="分享"
                                android:layout_marginLeft="@dimen/margin_20dp"
                                android:layout_centerVertical="true"
                                android:paddingLeft="@dimen/margin_20dp"
                                android:paddingRight="@dimen/margin_20dp"
                                android:paddingTop="@dimen/margin_10"
                                android:paddingBottom="@dimen/margin_10"
                                android:background="@drawable/buttonstyle1"/>
                            <TextView
                                android:id="@+id/tv_move"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="移入关注"
                                android:layout_toRightOf="@+id/tv_share"
                                android:layout_marginLeft="@dimen/margin_10dp"
                                android:layout_centerVertical="true"
                                android:paddingLeft="@dimen/margin_10dp"
                                android:paddingRight="@dimen/margin_10dp"
                                android:paddingTop="@dimen/margin_10"
                                android:paddingBottom="@dimen/margin_10"
                                android:background="@drawable/buttonstyle1"/>
                            <TextView
                                android:id="@+id/tv_detle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="删除"
                                android:layout_toRightOf="@+id/tv_move"
                                android:layout_marginLeft="@dimen/margin_10dp"
                                android:layout_centerVertical="true"
                                android:paddingLeft="@dimen/margin_20dp"
                                android:paddingRight="@dimen/margin_20dp"
                                android:paddingTop="@dimen/margin_10"
                                android:paddingBottom="@dimen/margin_10"
                                android:textColor="@color/color_orange_red"
                                android:background="@drawable/buttonstyle"/>
                            </RelativeLayout>
                            <TextView
                                android:id="@+id/tvCountMoney"
                                android:layout_width="80dp"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="总价：¥0"
                                android:textColor="@color/color_orange_red"
                                android:textSize="14sp"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/btnSettle"
                                    android:layout_alignParentRight="true"
                                    android:layout_width="120dp"
                                    android:paddingLeft="@dimen/margin_10dp"
                                    android:layout_height="match_parent"
                                    android:background="#e43a27"
                                    android:gravity="center_vertical"
                                    android:paddingBottom="5dp"
                                    android:paddingTop="5dp"
                                    android:paddingRight="20dp"
                                    android:text="去结算（0）"
                                    android:textColor="#FFF"
                                    android:textSize="14sp"/>
                            </RelativeLayout>


                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:id="@+id/emtryview"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="50dp">
        </View>

    </RelativeLayout>

</com.sxjs.common.widget.percentlayout.PercentLinearLayout>
    <include layout="@layout/carrecycle_item_null"/>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/car_nonet_pull_refresh_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        cube_ptr:ptr_duration_to_close="200"
        cube_ptr:ptr_duration_to_close_header="300"
        cube_ptr:ptr_keep_header_when_refresh="true"
        cube_ptr:ptr_pull_to_fresh="false"
        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.0"
        cube_ptr:ptr_resistance="2.0">
    <include layout="@layout/carrecycle_nonet"/>
    </android.support.v4.widget.SwipeRefreshLayout>
</com.sxjs.common.widget.aspect_ratio_layout.AspectRatioLinearLayout>