<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#FFFFFEFE"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/left"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFEFE"
            android:src="@mipmap/aat"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="#FF0D0D0D"
                android:text="确认订单"
                android:textSize="25sp"/>
        </RelativeLayout>
    </LinearLayout>
<view
    android:layout_width="match_parent"
    android:layout_height="5dp"
    android:background="#FFF2F0F0">
</view>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFEFE"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/order_002"
            />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:background="#FFFFFEFE">
            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/name"
                    android:layout_width="60dp"
                    android:textColor="#FF0D0D0D"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/mobile"
                    android:textColor="#FF0D0D0D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FF313030"
                    android:text="中国"/>
                <TextView
                    android:id="@+id/province"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FF313030"
                    android:text="河南"/>
                <TextView
                    android:id="@+id/city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FF313030"
                    android:text="杭州"
                    />
                <TextView
                    android:id="@+id/district"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:src="@mipmap/axt"/>
        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@mipmap/xian">
    </View>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#FFF2F0F0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

    <TextView
        android:id="@+id/paymode"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:textColor="#FF313030"
        android:gravity="center_vertical"
        android:text="支付方式:"/>
    <TextView
    android:layout_width="50dp"
    android:layout_height="match_parent"
        android:textColor="#FF313030"
        android:gravity="center_vertical"
    android:text="支付宝"/>
        <ImageView
            android:id="@+id/xuanze"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="right|center_vertical"
            android:src="@mipmap/axt"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#FFF2F0F0"/>
    <TextView
        android:id="@+id/liuyan"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="给商家留言(选填)"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#FFF2F0F0"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:background="#FFFFFEFE"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="280dp"
                android:layout_height="20dp"
                android:textColor="#FF313030"
                android:text="商品总额："/>
            <TextView
                android:id="@+id/goodsum"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:textColor="#FF313030"
                android:text="￥:xxx"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFEFE" >
            <TextView
                android:layout_width="280dp"
                android:layout_height="20dp"
                android:textColor="#FF313030"
                android:text="+运费 "/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:textColor="#FF313030"
                android:text="￥00:00"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#FFF2F0F0"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/paysum"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="50dp"
          android:gravity="center"
            android:background="#FFFFFEFE"
            android:textColor="@color/colorAccent"
            android:text="实付款"/>
    <Button
        android:id="@+id/rebuy"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:layout_gravity="right|bottom"
        android:background="#FFF74646"
        android:text="立即下单"/>
</LinearLayout>
</LinearLayout>