<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dip"
    android:gravity="center_vertical"
    android:background="#ffffffff">
    <LinearLayout
        android:id="@+id/personal_order_waitpay_layout"
        android:layout_weight="1.0"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f6f6f6"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_horizontal|center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:src="@drawable/personal_order_purchased_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:text="待付款"
           android:textColor="@android:color/black"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/personal_order_waitreceive_layout"
        android:layout_weight="1.0"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f6f6f6"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_horizontal|center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:src="@drawable/personal_order_accepted_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:text="待收货"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/personal_order_waitcomment_layout"
        android:layout_weight="1.0"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f6f6f6"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_horizontal|center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:src="@drawable/personal_order_canceled_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:text="待评价"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/personal_order_returned"
        android:layout_weight="1.0"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f6f6f6"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_horizontal|center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:src="@drawable/personal_order_returned_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:text="退换/售后"
            android:textColor="@android:color/black"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/personal_order_oder"
        android:layout_weight="1.0"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f6f6f6"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_horizontal|center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:src="@drawable/icon_pay_success"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:text="我的订单"
            android:textColor="@android:color/black"/>
    </LinearLayout>
</LinearLayout>
